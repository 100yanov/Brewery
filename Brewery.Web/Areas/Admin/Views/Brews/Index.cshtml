@model BrewViewModel[]

<div>
    <table id="table_id" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Recipe
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var brew in Model)
            {
                <tr>
                    <td>
                        @brew.Name
                    </td>
                    <td class="description">
                        @brew.Description
                    </td>
                    <td class="recipe">
                        @brew.RecipeName
                    </td>
                    <td>
                        <partial name="IdentifiableViewModelActions" model="@brew">
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>