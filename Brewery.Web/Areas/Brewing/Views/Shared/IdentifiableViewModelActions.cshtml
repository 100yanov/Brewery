@model string
<a asp-area="Brewing" asp-action="Details" asp-route-id="@Model" class="btn btn-primary">Details</a>
@if (this.User.IsInRole("Admin"))
{
    <a asp-area="Brewing" asp-action="Edit" asp-route-id="@Model" class="btn btn-primary">Edit</a>
    <a asp-area="Brewing" asp-action="Delete" asp-route-id="@Model" class="btn btn-danger">Delete</a>
}
