@model RecipeViewModel
<div>
    <hr />
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Name</td>
                <td>@Model.Description</td>
            </tr>
        </tbody>
    </table>
</div>
<br>
<h3>Ingredients:</h3>
<hr />
<div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @Html.DisplayFor(r => r.Ingredients)
            </tr>
        </tbody>
    </table>
</div>

