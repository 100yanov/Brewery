@model IngredientDeleteViewModel
<h2>Delete</h2>
<hr>
<h3>Are you sure you want to delete this Ingredient:</h3>
<h4>@Model.Name ?</h4>
<p class="text-danger">
    <strong>
        WARNING!
    </strong>
    <br>
    This ingredient will be removed from all recipes that is used in!
    <br>
    <i>Number of recipes ingredient is used in: @Model.RecipesCount</i>
</p>
<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <input class="btn btn-danger" type="submit" value="Yes!">
        <a class="btn btn-success" asp-action="Index">No!</a>
    </div>
</form>
