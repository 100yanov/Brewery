@model IngredientListViewModel
@{
    ViewData["Title"] = "Index";
}

<h2>Ingredients</h2>
<hr>
<div>
    <a class="btn btn-info" asp-action="Create">Add New</a>

</div>
<br>
<div>
    <table id="table_id" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.Ingredients)
            {
                <tr>
                    <td>
                        @i.Name
                    </td>
                    <td class="description">
                        @i.Quantity
                    </td>
                    <td>
                        <partial name="IdentifiableViewModelActions" model="@i.Id">
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>