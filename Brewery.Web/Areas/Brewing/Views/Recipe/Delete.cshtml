@model RecipeDeleteViewModel
<h2>Delete</h2>
<hr>
<h3>Are you sure you want to delete this Recipe:</h3>
<h4>@Model.Name ?</h4>
<p class="text-danger">
    <strong>
        WARNING!
    </strong>
    <br>
    All brews related to this recipe will also be deleted!
    <br>
    <i>Number of brews related to this recipe: @Model.BrewsCount</i>
</p>
<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <input class="btn btn-danger" type="submit" value="Yes!">
        <a class="btn btn-success" asp-action="Index">No!</a>
    </div>
</form>
